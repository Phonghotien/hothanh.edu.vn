mixin itemIp(text, cstype, csplacehd, textarea, col, row)
   .itemIp
      label.itemIp-lb(for="")= text
      if textarea
         textarea.itemIp-input(name="", cols= col, rows= row) 
      else
         input.itemIp-input(type=cstype, placeholder=csplacehd)

