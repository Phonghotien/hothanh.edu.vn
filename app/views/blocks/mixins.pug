mixin img(name)
   img(src="./assets/images/" + name, alt="", loading="lazy")
mixin menuItem(text, href, current=false, dropdown=false)
   li.menu-item(class=current ? 'current-menu-item' : '', class=dropdown ? 'dropdown' : '')
      a.menu-link(href=href)= text
      if dropdown
         ul.menu-list
            block
mixin mobileMxh(links)
   .mobile-mxh
      each link in links
         a.mobile-mxh-link(href="")
            +img(link.imgSrc)

mixin btn(text, type, classCustom, icon=false)
   if !classCustom
      if type == "button"
         button.btn(type="submit", class=classCustom)
            span.inner #{text}
            if icon
               i.fa-light.fa-arrow-right.icon
            else if icon !== false
               i(class=icon)
      else
         a.btn(href="", class=classCustom)
            if icon
               img(src="./assets/images/icon-btn-logo.png", alt="").icon-logo
            else if icon !== false
               i(class=icon)
            span.inner #{text}
   else
      if type == "button"
         button.btn(type="submit", class=classCustom)
            span.inner #{text}
            if icon
               i.fa-light.fa-arrow-right.icon
            else if icon !== false
               i(class=icon)
      else
         a.btn(href="", class=classCustom)
            span.inner #{text}
            if icon
               i.fa-light.fa-arrow-right.icon
            else if icon !== false
               i(class=icon)

