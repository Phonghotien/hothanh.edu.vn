mixin img(name)
   img(src="./assets/images/" + name, alt="", loading="lazy")
mixin menuItem(text, href, current=false, dropdown=false)
   li.menu-item(class=current ? 'current-menu-item' : '', class=dropdown ? 'dropdown' : '')
      a.menu-link(href=href)= text
      if dropdown
         ul.menu-list
            block
mixin mobileMxh(links)
   .mobile-mxh
      each link in links
         a.mobile-mxh-link(href="")
            +img(link.imgSrc)
                
mixin btn(name, classbtn, classIcon, img, button, datapop)
   if button !== "button"
      a(class=classbtn href="#")
         span.txt #{name}
         if classIcon || img
         .icon
            if classIcon
               i(class=classIcon)
            if img
               +img(img)
   else
      button(type="submit" class=classbtn data-popup=datapop ? datapop : null)
         span.txt #{name}
         if classIcon || img
         .icon
            if classIcon
               i(class=classIcon)
            if img
               +img(img)

mixin footerList(arr)
   ul.footer-list(class="menu-list")
      each arrs, index in arr
         li.footer-item(class="menu-item" class=index === 0 ? 'current-menu-item' : '')
            a.footer-link(class="menu-link")(href="") #{arrs.txt}

mixin social(txt, arr,dataaos)
   .social(data-aos=dataaos)
      if txt
         p.txt= txt
      ul.social-list
         each arrs in arr
            li.social-item
               a.social-link(href="")
                  +img(arrs.images)

mixin footerSocialItem(img)
   li.footer-social-item 
