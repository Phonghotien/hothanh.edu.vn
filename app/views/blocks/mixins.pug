mixin newsItem(classCustom, image, tag1, tag2, title, description)
   .news-item(class= classCustom)
      .news-img 
         a(href="").in
            +img(image)
      .news-des
         .news-des-inner 
            .news-tag
               if tag1
                  p.tag
                        != tag1
               if tag2
                  p.tag
                        != tag2
            h3.news-tt
               a.link(href="")= title
            p.news-txt!= description


mixin pagination(pages,classCustom)
   .pagi-pri(class= classCustom)
      .pagination
         .pagination-mona
               ul.page-numbers
                  each page in pages
                     if page.type === 'prev'
                        li
                           a.page-numbers.prev(href="")
                              i.fa-regular.fa-arrow-left
                     else if page.type === 'current'
                        li
                           a.page-numbers.current(href="")= page.number
                     else if page.type === 'dot'
                        li
                           a.page-numbers.dot= '...'
                     else if page.type === 'next'
                        li
                           a.page-numbers.next(href="")
                              i.fa-regular.fa-arrow-right
                     else
                        li
                           a.page-numbers(href="")= page.number

mixin card(classCustom, tt, txt, tags, img)
   .card(class=classCustom)
      .card-in
         .card-img
            a.in(href="")
               +img(img)
         .card-des
            .card-des-in
               h3.card-tt 
                  a.link(href="")= tt
               if txt
                  p.card-txt= txt
               if tags
                  .card-tag
                  each tag in tags
                     p.tag
                        != tag  

mixin box(classCustom, tt, txt, tags, img)
   .box(class=classCustom)
      .box-in
         .box-img
            a.in(href="")
               +img(img)
         .box-des
            .box-des-in
               if tags
                  .box-tag
                     each tag in tags
                        p.tag
                           != tag  
               h3.box-tt 
                  a.link(href="")= tt
               if txt
                  p.box-txt= txt

