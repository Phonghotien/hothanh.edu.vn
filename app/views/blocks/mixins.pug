mixin ttp(text, classtt, classCustom,datatt ,txt, titledecor, decorimg , dataaos, dataspl)
   .title(class=classtt)
      if titledecor
         .title-decor.mb-32
            +img(titledecor)
      h2.title-pri(data-tt=datatt, class=classCustom, data-aos=dataaos ? dataaos : undefined, data-spl=dataspl ? '' : undefined)
         != text
         if decorimg
            .decor
               +img(decorimg)
      if txt
         p.txt(data-aos=dataaos ? dataaos : undefined)
            != txt

