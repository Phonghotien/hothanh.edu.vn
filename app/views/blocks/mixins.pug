mixin csinput(csclass, cstype, csplacehd)
  input(class=csclass, type=cstype, placeholder=csplacehd)

mixin popup(classCustom,datapopupid,classicon,images, txt)
   .popup(class=classCustom, data-popup-id=datapopupid, data-lenis-prevent)
      .popup-overlay
         .popup-main
            .popup-close 
               .icon
                  if classicon
                     i(class= classicon)
                  if images
                     +img(images)
               if txt 
                  p.txt= txt
            .popup-main-wrapper
               .popup-over
                  .popup-wrapper
                     block

mixin hgallerySlider(rows, itemsPerRow)
   .hgallery-slider
      each row in Array(rows)
         .splide.row
            .splide__track
               .splide__list
                  each item, index in Array(itemsPerRow)
                     .splide__slide.col.col-4
                        .hgallery-item
                           .hgallery-img(data-fancybox="gallery" data-src=`./assets/images/gallery-${index + 1}.jpg`)
                              .hgallery-img-inner
                                 +img(`gallery-${index + 1}.jpg`)
